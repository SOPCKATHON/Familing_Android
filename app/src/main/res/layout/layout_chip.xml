<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.chip.Chip xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/chip_choice"
    style="@style/ChoiceChip"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:checked="false"
    android:minHeight="24dp"
    android:textAppearance="@style/ChipTextStyle"
    android:textColor="@color/selector_chip_text"
    app:chipBackgroundColor="@color/selector_chip_choice"
    app:chipCornerRadius="30dp"
    app:chipEndPadding="12dp"
    app:chipMinTouchTargetSize="0dp"
    app:chipStartPadding="12dp"
    app:chipStrokeColor="@color/selector_chip_border"
    app:chipStrokeWidth="1dp"
    app:rippleColor="@color/light_blue"
    tools:text="@string/benefit" />