<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.WriteFamilyActivity">

    <TextView
        android:id="@+id/tv_write_family"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="가족의 이름을 입력해주세요."
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="170dp"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textColor="@color/black_main"/>

    <EditText
        android:id="@+id/edit_family"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="24dp"
        android:lineHeight="1dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_write_family"
        android:backgroundTint="@color/gray_03"
        android:layout_marginTop="79dp"

        android:hint="ex.하린이네 가족"/>


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_ok"
        android:layout_width="0dp"
        android:layout_height="54dp"
        android:text="확인"
        android:textSize="16sp"
        android:textColor="@color/white"
        android:gravity="center"
        android:textStyle="bold"
        android:enabled="false"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@drawable/button_writefamily"
        android:layout_marginHorizontal="24dp"
        android:layout_marginBottom="40dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>